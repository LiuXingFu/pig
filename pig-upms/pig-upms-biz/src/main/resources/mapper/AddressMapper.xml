<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pig4cloud.pig.admin.mapper.AddressMapper">

	<resultMap id="addressMap" type="com.pig4cloud.pig.admin.api.entity.Address">
		<id property="addressId" column="address_id"/>
		<result property="province" column="province"/>
		<result property="city" column="city"/>
		<result property="area" column="area"/>
		<result property="informationAddress" column="information_address"/>
		<result property="code" column="code"/>
		<result property="userId" column="user_id"/>
		<result property="contactPhone" column="contact_phone"/>
		<result property="contactName" column="contact_name"/>
		<result property="isDefault" column="is_default"/>
		<result property="createTime" column="create_time"/>
		<result property="updateTime" column="update_time"/>
		<result property="createBy" column="create_by"/>
		<result property="updateBy" column="update_by"/>
		<result property="delFlag" column="del_flag"/>
	</resultMap>

	<select id="getById" resultMap="addressMap">
		SELECT
		address_id,
		province,
		city,
		area,
		information_address,
		CODE,
		user_id,
		contact_phone,
		contact_name,
		is_default,
		create_time,
		update_time,
		create_by,
		update_by,
		del_flag
		FROM
			p10_address
		WHERE
		del_flag = '0'
		AND address_id = #{addressId}
		AND `type` = #{type}
	</select>

	<select id="getByUserId" resultMap="addressMap">
		SELECT
		address_id,
		province,
		city,
		area,
		information_address,
		CODE,
		user_id,
		contact_phone,
		contact_name,
		is_default,
		create_time,
		update_time,
		create_by,
		update_by,
		del_flag
		FROM
			p10_address
		WHERE
		del_flag = '0'
		AND user_id = #{userId}
		AND `type` = #{type}
	</select>
</mapper>
